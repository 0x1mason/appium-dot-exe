<UserControl
    x:Class="Appium.Views.General.GeneralSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:general="clr-namespace:Appium.Views.General"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    mc:Ignorable="d"
    MinWidth="600">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="..\..\Dictionaries\Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <xctk:InverseBoolConverter
                x:Key="inverseBoolConv" />
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel
        Background="LightGray"
        Orientation="Vertical">
        <Label
            FontStyle="Normal"
            FontWeight="Bold"
            Content="General Settings" />
        <GroupBox
            Margin="0,5,0,0"
            Header="Server">
            <general:ServerView />
        </GroupBox>
        <GroupBox
            Margin="0,5,0,0"
            Header="Logging"
            IsEnabled="{Binding UseRemoteServer, Converter={StaticResource inverseBoolConv}}">
            <general:LoggingView/>
        </GroupBox>
    </StackPanel>
</UserControl>
